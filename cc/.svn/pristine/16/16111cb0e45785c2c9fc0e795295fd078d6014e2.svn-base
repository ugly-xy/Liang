<!DOCTYPE html>
<html class="ui-page-login">

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<title>비밀번호 찾기</title>
		<link href="css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="css/mui.picker.min.css"/>
		<link href="css/style.css" rel="stylesheet" />
		<style>
			.area {
				margin: 20px auto 0px auto;
			}
			.mui-input-group:first-child {
				margin-top: 20px;
			}
			.mui-input-group label {
				width: 30%;
			}
			.mui-input-row label~input,
			.mui-input-row label~select,
			.mui-input-row label~textarea {
				width: 70%;
			}
			.mui-checkbox input[type=checkbox],
			.mui-radio input[type=radio] {
				top: 6px;
			}
			.mui-content-padded {
				margin-top: 25px;
			}
			.mui-btn {
				padding: 10px;
			}
			.getcode{
				position: absolute;
				right: 0;
				top: 10px;
				font-size: 14px;
			}
			.hide{
				display: none;
			}
			.show{
				display: block;
			}
			
		</style>
	</head>

	<body>
		<header class="mui-bar mui-bar-nav">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
			<h1 class="mui-title">비밀번호 수정</h1>
		</header>
		<div class="mui-content">
			<div class="mui-input-group">
				<style type="text/css">
				#popover{
					height: 80px;
					width:200px;
				}
				</style>
				<div class="mui-input-row">
					<label>+<a href="javascript:;" id="showUserPicker" >82</a></label>
					<div id='userResult' class="ui-alert"></div>
					<input id='account' type="number" class="mui-input-clear mui-input" placeholder="휴대폰 번호">
				</div>
				<div class="mui-input-row yzmcon">
					<label>인증번호</label>
					<input id='yzmcode' type="text"  class="mui-input-clear mui-input" placeholder="인증번호">
					
					<a href="javaScript:;" class="getcode" id="getSms">인증번호 발송</a>
					<span class="getcode hide" id="waitFor">60</span>
				</div>
				<div class="mui-input-row">
					<label>비밀번호</label>
					<input id='password' type="password" class="mui-input-clear mui-input" placeholder="새 비밀번호">
				</div>
				<div class="mui-input-row">
					<label style="padding-top: 0;">비밀번호<br/>재확인</label>
					<input id='password_confirm' type="password" class="mui-input-clear mui-input" placeholder="비밀번호 재확인">
				</div>
			</div>
			
			<div class="mui-content-padded">
				<button id='reg' class="mui-btn mui-btn-block mui-btn-primary "></button>
			</div>
		</div>
		<script src="js/mui.min.js"></script>
		<script src="js/mui.picker.min.js" type="text/javascript" charset="utf-8"></script>
		<script src="js/app.js"></script>
		<script>
			(function($, doc) {
				$.init();
				$.plusReady(function() {
//					mui('.mui-scroll-wrapper').scroll()
					var settings = app.getSettings();
					var regButton = doc.getElementById('reg');
					var accountBox = doc.getElementById('account');
					var yzmcodeBox = doc.getElementById("yzmcode");
					var passwordBox = doc.getElementById('password');
					var passwordConfirmBox = doc.getElementById('password_confirm');
					
					var userPicker = new $.PopPicker();
					userPicker.setData([{
						value: 81,
						text: 'china'
					}, {
						value: 82,
						text: 'kr'
					}, {
						value: 83,
						text: '美国'
					}, {
						value: 84,
						text: '加拿大'
					}, {
						value: 85,
						text: '非洲'
					}, {
						value: 86,
						text: 'china'
					}, {
						value: 87,
						text: '老挝'
					}, {
						value: 88,
						text: '日本'
					}, {
						value: 89,
						text: '缅甸'
					}, {
						value: 90, 
						text: '法国'
					}]);
					var showUserPickerButton = doc.getElementById('showUserPicker');
					showUserPickerButton.addEventListener('tap', function(event) {
						userPicker.show(function(items) {
							showUserPickerButton.innerText = JSON.stringify(items[0].value);
							//返回 false 可以阻止选择框的关闭
							//return false;
						});
					}, false);
					
					var getSmsButton = doc.getElementById('getSms');
					getSmsButton.addEventListener('tap', function(event) {
						var phone = accountBox.value;
						if(!phone || '' == phone) {
							plus.nativeUI.toast('올바른 휴대폰 번호를 입력해주세요');
							return;
						}
						if(!app.testPhone(phone)){
							plus.nativeUI.toast("올바른 휴대폰 번호를 입력해주세요");
							return;
						}
						var jsonData = {
							"reqKey": phone,
							"flag": 11,
						}
						$.getJSON(app.serverApi(app.apiConstant.getDynamicKey),jsonData,function(res){
							if(0 != res.code) {
								plus.nativeUI.toast(res.msg+''); 
								return;
							}
							var key = res.data;
							if(!key || key.indexOf(",") < 0) {
								return;
							}
							var data = key.split(",");
							jsonData = {
								"phone": phone,
								"data": data[0],
								"timestamp": data[1]
							}
							
							$.post(app.serverApi(app.apiConstant.sendSms),jsonData,function(res){
								if(0 != res.code) {
									plus.nativeUI.toast(res.msg+'');
								} else {
									beginCount(60);
								}
							},'json');	
							
						})
						
					});
					
					regButton.addEventListener('tap', function(event) {
						var fInfo = {
							"phone": accountBox.value,
							"code":yzmcodeBox.value,
							"password": passwordBox.value, 
							"passwordConfirm":passwordConfirmBox.value,
						};
						app.reg(fInfo, function(err) {
							if (err) {
								plus.nativeUI.toast(err);
								return;
							}
							$.post(app.serverApi(app.apiConstant.userForget),fInfo,function(res){
								if(0 != res.code) {
									plus.nativeUI.toast(res.msg+'');
								} else {
									plus.nativeUI.toast('SUCCESS');
									$.openWindow({
										url: 'login.html',
										id: 'login',
										show: {
											aniShow: 'pop-in'
										}
									});
								}
								
							},'json');
							
						});
					});
				});
			}(mui, document));
			function beginCount(val){
			 		var num =Number(val);
					var waitForDoc = document.getElementById("waitFor");
					var getSmsDoc = document.getElementById("getSms");
					waitForDoc.innerHTML=num+"";
					if((num--)<0){
						waitForDoc.style.display="none";
						getSmsDoc.style.display="inline";
						return;
					}else{
						if((num+2)>=Number(val)){
						  getSmsDoc.style.display="none";
						  waitForDoc.style.display="inline";
						}
						 t=setTimeout("beginCount("+num+")",1000);
					}
				};
		</script>
	</body>

</html>