.mui-bar-nav {
	-webkit-box-shadow: none;
	box-shadow: none;
}

.kr-article .kr-table-view .mui-media-body {
	position: relative;
	font-size: 14px;
	white-space: normal;
}

.kr-article-banner {
	position: relative;
	background: #fff;
	margin-bottom: 0;
}
.kr-article-cover {
	width: 100%;
	position: relative;
}
.kr-article-cover img {
	width: 100%;
}
.kr-article-title {
	padding-top: 50px;
	font-size: 16px;
	font-weight: 400;
	line-height: 21px;
	z-index: 11;
}

.kr-article-meta {
	padding: 10px 0 10px 20px;
	display: table;
}
.kr-article-meta div {
	height: 30px;
	font-size: 15px;
	display: table-cell;
	vertical-align: middle;
	color: gray;
	padding: 0 5px;
}
.kr-article-avatar img {
	width: 30px;
}
.kr-article-text {
	font-size: 13px!important;
}
.kr-article-author,
.kr-article-time {
	font-weight: 600;
}
.kr-article-article {
	font-size: 15px;
	padding: 0 15px;
	color: #000;
}
.kr-article-article ol {
	margin: 0 0 0 20px;
	padding: 0;
}
.kr-article-article p {
	color: #000;
	font-size: 15px;
	line-height: 23px;
}

.kr-article-article img,
.kr-article-article iframe {
	max-width: 100%;
	width: 100%;
	height: auto;
}
embed,object{
	display: none;
}
.kr-article-content {
	margin-top: 0;
}
.kr-browser .mui-bar .mui-btn {
	top: 40px;
	padding: 2px 12px 2px;
}
.kr-browser-bar .mui-spinner {
	width: 20px;
	height: 20px;
}
