<#import "/spring.ftl" as spring />
<#import "/admin/layouts/common.xhtml" as layout>
<@layout.title>狼人杀用户数据</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink> </@layout.cssLink>
<@layout.pageHeader> 狼人杀数据 </@layout.pageHeader> <@layout.mainContent>
	<input type="hidden" id="nav_id" value="werewolfKillSt" />
<div class="well well-sm">
	<div class="row">
		<FORM action="/admin/werewolfKillSt.xhtml">
			<div class="col-sm-2">
				<input class="form-control" id="uid" name="uid" value="${uid!}" placeholder="用户ID"/>
			</div>
			
			<div class="col-sm-2 form-group form-inline">
			<LABEL>场次:</LABEL>
			<select class="form-control"  id="actorCount" name="actorCount">
			<option value="6">6人场</option>
			<option <#if actorCount?? && actorCount==9>selected</#if> value="9" >9人场</option>
			<option <#if actorCount?? && actorCount==12>selected</#if> value="12" >12人场</option>
			</select>
			</div>
			
			<div class="col-sm-2 form-group form-inline">
			<LABEL>角色:</LABEL>
			<select class="form-control"  id="rateType" name="rateType">
			<option value="0">全部</option>
			<option <#if rateType?? && rateType==1>selected</#if> value="1" >狼人</option>
			<option <#if rateType?? && rateType==2>selected</#if> value="2" >平民</option>
			<option <#if rateType?? && rateType==3>selected</#if> value="3" >预言家</option>
			<option <#if rateType?? && rateType==4>selected</#if> value="4" >女巫</option>
			<option <#if rateType?? && rateType==5>selected</#if> value="5" >猎人</option>
			<option <#if rateType?? && rateType==6>selected</#if> value="6" >白痴</option>
			<option <#if rateType?? && rateType==7>selected</#if> value="7" >守卫</option>
			</select>
			</div>
			
			<div class="col-sm-3 form-group form-inline">
			<LABEL>排序:</LABEL>
			<select class="form-control"  id="sort" name="sort">
			<option value="0">总场次</option>
			<option <#if sort?? && sort==1>selected</#if> value="1" >胜利场次</option>
			</select>
			</div>
			
			<div class="col-sm-2">
			<button type="submit" class="btn btn-default">查询</button>
			</div>
		</FORM>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="dataTable_wrapper">
			<table class="table table-striped table-bordered table-hover"
				id="dataTables-example">
				<thead>
					<tr>
						<th>用户ID</th>
						<th>胜利场次/总场次</th>
						<th>狼人(胜利/总)</th>
						<th>平民(胜利/总)</th>
						<th>预言家(胜利/总)</th>
						<th>女巫(胜利/总)</th>
						<th>猎人(胜利/总)</th>
						<th>白痴(胜利/总)</th>
						<th>守卫(胜利/总)</th>
					</tr>
				</thead>
				<tbody>
					<#list page.list as it>
					<tr class="gradeA">
						<td><a href="/admin/users.xhtml?userId=${(it.uid)!}&role=0&status=0" target="_blank">${(it.uid)!}</a></td>
					    <td><#if it.winCnt??> ${it.winCnt}<#else>0</#if>/
					    <#if it.allCnt??> ${it.allCnt}<#else>0</#if></td>
					    <td><#if it.wolf??> <#if it.wolfWin??> ${it.wolfWin}<#else>0</#if> /${it.wolf}<#else></#if></td>
					    <td><#if it.village??> <#if it.villageWin??> ${it.villageWin}<#else>0</#if> /${it.village}<#else></#if></td>
					    <td><#if it.prophet??> <#if it.prophetWin??> ${it.prophetWin}<#else>0</#if> /${it.prophet}<#else></#if></td>
					    <td><#if it.witch??> <#if it.witchWin??> ${it.witchWin}<#else>0</#if> /${it.witch}<#else></#if></td>
					    <td><#if it.hunter??> <#if it.hunterWin??> ${it.hunterWin}<#else>0</#if> /${it.hunter}<#else></#if></td>
					    <td><#if it.sb??> <#if it.sbWin??> ${it.sbWin}<#else>0</#if> /${it.sb}<#else></#if></td>
					    <td><#if it.defender??> <#if it.defenderWin??> ${it.defenderWin}<#else>0</#if> /${it.defender}<#else></#if></td>
					</tr>
					</#list>
				</tbody>
			</table>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="dataTables_info" id="dataTables-example_info"
					role="status" aria-live="polite">当前
					${page.curPage}/${page.totalPage}页， 共${page.total}条</div>
			</div>
			<div class="col-sm-8"><@vpage cur=page.curPage
				total=page.totalPage url=page.url > ${vpage}</@vpage></div>
		</div>
	</div>
</div>

</@layout.mainContent> <@layout.script> <script type="text/javascript">
</script> </@layout.script> 