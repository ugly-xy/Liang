<#import "/spring.ftl" as spring />
<#import "/admin/layouts/common.xhtml" as layout>
<@layout.title>用户任务详情</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink>
<link rel="stylesheet" type="text/css"
	href="/webuploader/webuploader.css"></@layout.cssLink>
	<@layout.pageHeader> 用户任务详情 </@layout.pageHeader> <@layout.mainContent>

<div class="row">
	<div class="col-lg-8">
		<form role="form" id="form">
			<div class="dataTable_wrapper">
				<table class="table table-striped table-bordered table-hover"
					id="dataTables-example">
					<thead>
						<tr>
							<th>任务模型ID</th>
							<th>任务类型</th>
							<th>任务描述</th>
							<th>任务奖励</th>
							<th>当前进度</th>
							<th>结束条件</th>
							<th>任务状态</th>
						</tr>
					</thead>
					<tbody>
					    <#if task.tasks??>
						<#list task.tasks as it>
						<tr class="gradeA">
							<td>${it._id}</td>
							<td><#if task.day?? && task.day==10000000>新手任务 <#else>每日任务</#if></td>
							<td>${it.tmName}</td>
							<td>${it.tmReward}</td>
							<td>${it.tmPlan}</td>
							<td>${it.tmEndCondition}</td>
							<td><#if it.tmStatus?? && it.tmStatus==2>任务进行中 <#elseif
									it.tmStatus?? && it.tmStatus==3>待领取奖励 <#elseif
									it.tmStatus?? && it.tmStatus==4>任务已完成 <#else>任务未完成</#if></td>
						</tr>
						</#list>
						</#if>
						<#if task.vips??>
						<#list task.vips as it>
						<tr class="gradeA">
							<td>${it._id}</td>
							<td>VIP任务</td>
							<td>${it.tmName}</td>
							<td>${it.tmReward}</td>
							<td>${it.tmPlan}</td>
							<td>${it.tmEndCondition}</td>
							<td><#if it.tmStatus?? && it.tmStatus==2 >任务进行中
							<#elseif it.tmStatus?? && it.tmStatus==3>待领取奖励
							<#elseif it.tmStatus?? && it.tmStatus==4>任务已完成
							<#else>任务未完成</#if></td>
						</tr>
						</#list>
						</#if>
					</tbody>
				</table>
			</div>
		</form>
	</div>
</div>
<!-- /.row (nested) --> </@layout.mainContent> <@layout.script> <script
	type="text/javascript" src="<@layout.static path="/webuploader/webuploader.js" />
"> </script> </@layout.script> 