<#import "/spring.ftl" as spring />
<#import "/admin/layouts/common.xhtml" as layout>
<@layout.title>王者大乱斗英雄</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink>
<link rel="stylesheet" type="text/css"
	href="/webuploader/webuploader.css"></@layout.cssLink>
	<@layout.pageHeader> 王者大乱斗英雄信息</@layout.pageHeader> <@layout.mainContent>
	<input type="hidden" id="nav_id" value="hero" />
<div class="row">
	<div class="col-lg-8">
		<form role="form" id="form">
			<div class="form-group">
				<label>添加英雄</label><br /> 
				<label>名称</label> 
				<input class="form-control" id="name" name="name" value="">
				<label>编号</label>
				<input class="form-control" id="code" name="code" value="">
			</div>
			<button id="submit" class="btn btn-default">提交</button>
		</form>
	</div>

</div>
<!-- /.row (nested) --> </@layout.mainContent> <@layout.script> <script
	type="text/javascript" src="<@layout.static path="/webuploader/webuploader.js" />">
</script> <script>
	$(function() {
		$("#submit").click(function(e) {
			e.preventDefault();
			if(check()){
			var t = this;
			var jsonData = $("#form").serializeArray();
			$.post("/admin/slotMachines/add.xhtml", jsonData, function(ret) {
				if (0 != ret.code) {
					alert(ret.msg);
				} else {
					alert("Success");
					window.location.href = "/admin/slotMachines/query.xhtml";
				}
			});}
		});

		$("#reset").click(function(e) {

		});
	});
	function check() {
		var name = $("#name").val();
		var code = $("#code").val();
		if (name == null || name == "" || code == null || code == "") {
			alert("请重新输入");
			return false;
		}else{
			return true;
		}
	}
</script> </@layout.script> 