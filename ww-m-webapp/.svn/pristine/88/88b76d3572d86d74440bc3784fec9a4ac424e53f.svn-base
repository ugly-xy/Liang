* {
    padding: 0;
    margin: 0;
}

body {
    -webkit-touch-callout: none;
    -webkit-text-size-adjust: none;
    -webkit-appearance: none;
    -webkit-tap-highlight-color: transparent;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    text-align: justify;
    text-justify: inter-ideograph;
    font-family: "Microsoft YaHei", "Hiragino Sans GB W3", "Heiti SC", Helvetica, sans-serif;
}

.home-bg {
    background: url("../img/bg.png") no-repeat;
    background-size: 100% 100%;
    height: 50rem;
    width: 100%;
}

.home-font {
    font-size: .8rem;
    width: 66%;
    color: #666666;
    height: 15%;
    display: block;
    margin: 0 auto;
    position: relative;
    top: 22rem;
    text-align: center;
}

.font-num {
    display: block;
    padding-top: 1rem;
    font-size: 2.2rem;
    color: #ff7d7d;
}

.home-btn img {
    display: block;
    width: 16rem;
    margin: 0 auto;
    position: relative;
    top: 28rem;
}