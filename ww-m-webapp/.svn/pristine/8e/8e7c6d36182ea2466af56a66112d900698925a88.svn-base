<!DOCTYPE html>
<html lang="en">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta charset="UTF-8">
<title><#if (article.content)?? && article.content?length gt 20> ${article.content[0..20]}...  <#else> ${(article.content)!} </#if></title>
<link rel="stylesheet" href="/css/detail.css">
<script src="https://lkme.cc/js/linkedme.min.js" ></script>
</head>
<body>
	<div class="pic_tit ">
		<span class="pic"><img src="${(article.avatar)!}" alt=""></span>
		<p class="text">
			<span class="name"><a href="javascript:;">${(article.nickname)!}</a><i><img src="${article.lvPic}" /></i></span>
			<span>ID：${(article.userId)!}</span>
		</p>
		<p class="detail">${(article.content)!}</p>
	</div>
<#if article.type == 3>
	<div class="video">
		<#if (article.pics)??>
			<#list article.pics as pic>
			<div class="style:margin"><img src="<#if pic?? && pic?index_of("http://zim.")==0  >${pic}@!bi7<#else>${pic}</#if>" alt="" /></div> <br />
			</#list>
		</#if>
	</div>
<#elseif article.type == 4>
	<div class="video">
		<img src="/images/video.jpg" alt="">
		<strong class="play"><img src="/images/play.png" alt=""></strong>
		<strong class="pause" style="display:none"><img src="/images/pause.png" alt=""></strong>
		<p>
			<span class="number"><i>89211</i>次播放</span>
			<span class="time">4:47<i><!-- <img src="/images/enlarge.png" alt=""> --></i></span>
		</p>
	</div>
<#else>
	<!-- <div class="video">
		<img src="/images/video.jpg" alt="">
		<strong class="play"><img src="/images/play.png" alt=""></strong>
		<strong class="pause" style="display:none"><img src="/images/pause.png" alt=""></strong>
		<p>
			<span class="number"><i>89211</i>次播放</span>
			<span class="time">4:47<i><!-- <img src="/images/enlarge.png" alt=""> </i></span>
		</p>
	</div> -->
</#if>
	<div class="icons">
		<p class="icon1"><span><img src="/images/zan.png" alt=""></span>${(article.praiseCnt)!'0'}</p>
		<p class="icon2"><span><img src="/images/zan2.png" alt=""></span>${(article.hitCnt)!'0'}</p>
		<p class="icon3"><span><img src="/images/mes.png" alt=""></span>${(article.commentCnt)!'0'}</p>
		<p class="icon4"><span><img src="/images/forward.png" alt=""></span>${(article.shareCnt)!'0'}</p>
	</div>
	<div class="line"></div>
	<#if tops??>
	<div class="comment">
		<h2>热门评论</h2>
		<#list tops as it> 
		<div class="pl">
			<span class="sm_pic"><img src="${(it.avatar)!}" alt=""></span>
			<div class="sm_text">
				<span class="zan_num"><i></i><b>${(it.praiseCnt)!}</b></span>
				<span class="sm_name"><a href="javascript:;">${(it.nickname)!}</a><i><img src="${it.lvPic}" /></i></span>
				<p>${(it.content)!}</p>
			</div>
		</div>
		</#list>
	</div>
	</#if>
	
	<div class="comment">
		<h2>最新评论（<span>${(news.total)!}</span>）</h2>
		<#list news.list as it> 
		<div class="pl">
			<span class="sm_pic"><img src="${(it.avatar)!}" alt=""></span>
			<div class="sm_text">
				<span class="zan_num"><i></i><b>${(it.praiseCnt)!}</b></span>
				<span class="sm_name"><a href="javascript:;">${(it.nickname)!}</a><i><img src="${it.lvPic}" /></i></span>
				<p>${(it.content)!}</p>
			</div>
		</div>
		</#list>
	</div>
	<div class="hot_topic">
		<p><i></i><span><a href="http://m.zhuangdianbi.com/downloads/app.xhtml" >更多精彩内容</a></span></p>
	    <a class="linkedme" id="go" href="111#" style="display: inline-block;width: 90px;height: 50px;background: #fcd746;line-height: 50px;text-align: center;font-size: 16px;position: absolute;right: 0;bottom: 0;"">
	              打开app
	    </a>
	</div>
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript">
/*点赞效果*/
$(document).ready(function(e) {
    $('.zan_num').click(function(){
        var left = parseInt($(this).offset().left)+0, 
            top =  parseInt($(this).offset().top)-0, 
            obj=$(this);
            $(this).addClass("cur");
            $(this).find("i").addClass("cur");
        $(this).append('<div id="zhan"><b>+1<\/b></\div>');
        $('#zhan').css({'position':'absolute','z-index':'1','color':'#C30',
        'left':left+'px','top':top+'px'});
        $('#zhan').animate({top:top-20,opacity: 0},500,
        function(){
            $(this).fadeOut(1500).remove();
            var Num = parseInt(obj.find('b').text());
               Num++;
            obj.find('b').text(Num);
        });
    return false;
    });
});
</script>
<script>
var _hmt = _hmt || [];
(function() {
  var hm = document.createElement("script");
  hm.src = "//hm.baidu.com/hm.js?bbc3e75ed94c6671bb4a11335a08754a";
  var s = document.getElementsByTagName("script")[0]; 
  s.parentNode.insertBefore(hm, s);
  
  linkedme.init("${(key)!}", {type: "${(type)!}"}, null);
  var data = {};
  data.type = "${(type)!}";  //模式
  //AppStore下载地址
  data.ios_custom_url = "https://itunes.apple.com/us/app/bibi%E5%A8%B1%E4%B9%90%E7%A4%BE%E5%8C%BA-%E4%B8%80%E8%B5%B7%E6%9D%A5%E7%8E%A9%E5%90%A7/id1100160696?mt=8&ign-mpt=uo%3D4"; 
  //安卓平台下App的下载地址
  data.android_custom_url = "http://a.app.qq.com/o/simple.jsp?pkgname=com.zhuangbi#opened";
  // 自定义深度链接参数
  data.params = '{"articleId":"${(article._id)!}","date":"${(date)!}"}'; 
  linkedme.link(data, function(err, data){
    if(err){
  	  //深度链接生成失败  跳到应用宝
  	  document.location = "http://a.app.qq.com/o/simple.jsp?pkgname=com.zhuangbi#opened";
    } else {
  	//生成成功,设置按钮的href
      $("#go").attr("href",data.url); 
    }
  },false);
  
})();
</script>
</body>
</html>
