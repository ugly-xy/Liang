package com.we.models.userTask;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;

import com.we.models.AbstractDocument;

/** 任务 */
public class Task extends AbstractDocument {

	/**
	 * 
	 */
	private static final long serialVersionUID = -6942919374872923128L;
	private String title; // 任务标题
	private String detail;// 描述
	private int type;// 任务类型 自有 项目方
	private String pic;// 图片
	private HashMap<String, Integer> rewards;// 任务奖励 货币ID:数量
	private int templateId;// 任务模版ID
	private int endCondition;// 任务结束条件 当进度不小于结束条件则结束
	private int sort;// 排序
	private int status;// 状态 上下线
	private Long telegramId;// telegram群号
	private String telegramUrl;// 加入telegramGroup的地址
	private String twitterId;// twittr账号
	private Long startTime; // 上线时间
	private Long endTime; // 下线时间

	public static final int TYPE_WE = 1;// 自有任务
	public static final int TYPE_PROJECT = 2;// 项目方任务

	/** 模版类型 */
	public enum Template {
		TELEGRAM(1, "加入官方电报群"), TWITTER(2, "关注官方Twitter账号"), INVITE_FRIENDS(3, "邀请好友"), READ_NEWS_DAILY(4, "每日阅读文章"),;

		private int code; // code
		private String detail;// 解释

		private Template(int code, String detail) {
			this.code = code;
			this.detail = detail;
		}

		public int getCode() {
			return code;
		}

		public String getDetail() {
			return detail;
		}
	}

	// 每日的任务模版集合
	public final static List<Integer> daily = new ArrayList<Integer>(Arrays.asList(Template.READ_NEWS_DAILY.code));

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public HashMap<String, Integer> getRewards() {
		return rewards;
	}

	public void setRewards(HashMap<String, Integer> rewards) {
		this.rewards = rewards;
	}

	public int getTemplateId() {
		return templateId;
	}

	public void setTemplateId(int templateId) {
		this.templateId = templateId;
	}

	public int getEndCondition() {
		return endCondition;
	}

	public void setEndCondition(int endCondition) {
		this.endCondition = endCondition;
	}

	public int getSort() {
		return sort;
	}

	public void setSort(int sort) {
		this.sort = sort;
	}

	public int getStatus() {
		return status;
	}

	public void setStatus(int status) {
		this.status = status;
	}

	public Long getStartTime() {
		return startTime;
	}

	public void setStartTime(Long startTime) {
		this.startTime = startTime;
	}

	public Long getEndTime() {
		return endTime;
	}

	public void setEndTime(Long endTime) {
		this.endTime = endTime;
	}

	public Task() {
		super();
	}

	public Long getTelegramId() {
		return telegramId;
	}

	public void setTelegramId(Long telegramId) {
		this.telegramId = telegramId;
	}

	public String getTelegramUrl() {
		return telegramUrl;
	}

	public void setTelegramUrl(String telegramUrl) {
		this.telegramUrl = telegramUrl;
	}

	public String getTwitterId() {
		return twitterId;
	}

	public void setTwitterId(String twitterId) {
		this.twitterId = twitterId;
	}

	public String getDetail() {
		return detail;
	}

	public void setDetail(String detail) {
		this.detail = detail;
	}

	public String getPic() {
		return pic;
	}

	public void setPic(String pic) {
		this.pic = pic;
	}

	public int getType() {
		return type;
	}

	public void setType(int type) {
		this.type = type;
	}

	public Task(Integer type, String title, HashMap<String, Integer> rewards, int templateId, int endCondition,
			int sort, int status, Long telegramId, String telegramUrl, String twitterId, Long startTime, Long endTime,
			String detail, String pic) {
		super();
		this.type = type;
		this.title = title;
		this.rewards = rewards;
		this.templateId = templateId;
		this.endCondition = endCondition;
		this.sort = sort;
		this.status = status;
		this.startTime = startTime;
		this.endTime = endTime;
		this.telegramId = telegramId;
		this.telegramUrl = telegramUrl;
		this.twitterId = twitterId;
		this.detail = detail;
		this.pic = pic;
	}

}
