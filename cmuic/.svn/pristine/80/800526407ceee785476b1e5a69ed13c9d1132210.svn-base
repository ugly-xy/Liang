<!doctype html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="css/list-to-detail.css" />
		<style>
			body{
				background: #fff;
			}
			.kr-article-content{
				height: 100%;
				background: #fff;
			}
			
			.kr-article-banner{

			}
			.kr-article-title p{
				font-weight: normal;
				color: #9FA5AF;
				font-size: 13px;
			}
			.kr-article-articl{
				padding-top: 0;
			}
			.kr-article-content{
				background: #fff;
				padding: 0 10px;

			}
			.kr-article-article{
				font-weight: normal;
				color: #576073;
			}
			.mui-icon-share {
				background: url(images/icon-share-01.png) no-repeat left center;
				height: 20px;
				background-size: 16px;
				top: 12px;
				right: 5px;
				display: block !important;
			}
		</style>
	</head>

	<body >

		<div class="mui-content">
			<!--顶部banner图 开始<--></-->
			<header  class="mui-bar mui-bar-nav" >
				 <h1 class="mui-title">{{title}}</h1>
				 <a class="mui-icon mui-pull-right mui-icon-share" id="news_share_btn"></a>
			</header>
			<!--顶部banner图 结束-->
			<div class="kr-article-content">
			   	<h2  class="kr-article-title">{{title}}<p>{{time}}</p></h2>
				<!--文章详细内容-->
				<div id="kr-article-article" class="kr-article-article" v-html="content"></div>
				
			</div>
		</div>

		<script src="js/mui.min.js"></script>
		<script src="js/app.js" type="text/javascript"></script>
		<script src="js/vue.min.js" type="text/javascript" charset="utf-8"></script>
		<script type="text/javascript">
			mui.init();

			function getDefaultData() {
				return {
					i:'1',
					cover: '',
					title: '',
					author: '',
					time: '',
					content: ''
				}
			}

			var vm = new Vue({
				el: '.mui-content',
				data: getDefaultData(),
				methods: {
					resetData: function() {//重置数据
						Object.assign(this.$data, getDefaultData());
					}
				}
			});

			//监听自定义事件，获取新闻详情
			document.addEventListener('get_detail', function(event) {
				var gid = event.detail.gid;
				if(!gid) {
					return;
				}
				vm.i = event.detail.i+"";
				vm.title = event.detail.title;
				vm.time = event.detail.time;
				vm.cover =event.detail.cover;
				if(1==vm.i){
					initContentDetail(gid);
				}else{
					initNoticeDetail(gid);
				}
				
			});
			
			function initNoticeDetail(id){
				if(id&&''!=id){
					mui.getJSON(app.serverApi(app.apiConstant.getNotice),{id:id},function(res){
						if(0!=res.code){
							plus.nativeUI.toast(res.msg);
						}else{
							var noticeData =res.data.notice;
							vm.author = res.data.username;
							if(noticeData&&null!=noticeData){
								vm.content = noticeData.content;
							}
							
						}
					})
				}
			}
			
			function initContentDetail(id){
				if(id&&''!=id){
					mui.getJSON(app.serverApi(app.apiConstant.getArticle),{id:id},function(res){
						if(0!=res.code){
							plus.nativeUI.toast(res.msg);
						}else{
							var articleData =res.data.new;
							vm.author = res.data.username;
							 vm.imgDomain =res.data.imgDomain;
							if(articleData&&null!=articleData){
								vm.content = articleData.content;
							}
							
						}
					})
				}
			}

			//重写返回逻辑
			mui.back = function() {
				plus.webview.currentWebview().hide("auto", 300);
			}
			
			//窗口隐藏时，重置页面数据
			mui.plusReady(function () {
				var self = plus.webview.currentWebview();
				self.addEventListener("hide",function (e) {
					window.scrollTo(0, 0);
					vm.resetData();
				},false);
			})
			
		</script>
	</body>

</html>