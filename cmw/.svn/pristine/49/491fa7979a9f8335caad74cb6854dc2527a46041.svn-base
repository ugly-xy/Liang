<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<#include "/common/head.xhtml"/>
		<#if new??>
		<title>${(new.title)!}</title>
		<meta property="og:title" content="${(notice.title)!}"/>
		<meta name="description" content="sssssss"/>
		<meta name="og:description" content="hhhhhhhhh"/>
		<meta property="og:image:secure_url" content="https://www.candy.club/active/assets/image/ico-comodo.jpg" />
		<#elseif notice??>
		<title>${(new.title)!}</title>
		<meta property="og:title" content="${(notice.title)!}"/>
		<meta name="description" content="eeeee"/>
		<meta name="og:description" content="jjwwwww"/>
		<meta property="og:image:type" content="image/jpeg" />

		<meta id="as" property="og:image:secure_url" content="https://www.candy.club/active/assets/image/ico-comodo.jpg" />
		
		</#if>
	</head>

	<body>
		<#include "/common/header.xhtml"/>
		<section class="pageinfo">
		<script async="async" type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=5bab3adc6750788d"></script>
			<div class="container">
				<div class="newsinfo">
					<div class="infoleft">
						<#if new??>
							<h1>${(new.title)!}</h1>
							<p><img src="${(imgDomain)!}${(new.cover)!}" width="786"></p>
							<p>${(new.content)!} </p>
							<p id="time" style="display: none">${(new.publishTime?number_to_datetime)!} </p>
						<#elseif notice??>
							<h1>${(notice.title)!}</h1>
							<p>${(notice.content)!}</p>
							<p id="time" style="display: none">${(notice.createTime?number_to_datetime)!}</p>
						</#if>
						
					</div>
					<div class="inforight">
						<div class="datescroll">
							<div class="year"></div>
							<div class="date"></div>
							<div class="time"></div>
							<div class="author"></div>
							<div class="share">
								<div class="stitle">Share</div>
								<div class="sico addthis_toolbox" addthis:url="https://www.candy.club/notice.xhtml?id=4" addthis:description="hellohello" >
									<a href="" class="addthis_button_facebook"><img src="/active/assets/image/ico-facebook.png" width="40" /></a>
									<a href="" class="addthis_button_twitter"><img src="/active/assets/image/ico-twitter.png" width="40" /></a>
									<a href="" class="addthis_button_kakaotalk"><img src="/active/assets/image/ico-talk1.png" width="40"/></a>
									<a href="" class="addthis_button_telegram"><img src="/active/assets/image/ico-telegram1.png" width="40"/></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
        <#include "/common/footer.xhtml"/>
		<script type="text/javascript">
			const path = window.location.href;

			$(window).load(function() {
				var dv = $('.datescroll'),st;
				dv.attr('otop', dv.offset().top); //存储原来的距离顶部的距离
				$(window).scroll(function() {
					st = Math.max(document.body.scrollTop || document.documentElement.scrollTop);
					if(st > parseInt(dv.attr('otop'))) {
						if(dv.css('position') != 'fixed') dv.css({
							'position': 'fixed',
							top: 0
						});
					} else if(dv.css('position') != 'static') dv.css({
						'position': 'static'
					});
				});
				
				datetostr($("#time").html()+"");





				 //$(".sico.addthis_toolbox").attr('addthis:url',"https://www.candy.club/notice.xhtml?id=4");
				// $(".sico.addthis_toolbox").attr("addthis:media","https://www.candy.club/active/assets/image/ico-comodo.jpg");
			});

			function datetostr(time){
				var subTime = "2018-07-14 12:59:00";
				if(time&&time!=''){
					subTime=time;
				}
				var time = new Date(subTime);
				Y = time.getFullYear();
				M = (time.getMonth()+1 < 10 ? '0'+(time.getMonth()+1) : time.getMonth()+1) ;
				D = time.getDate() ;
				h = time.getHours() ;
				m = time.getMinutes();
				$(".year").html(Y);
				$(".date").html(M+"/"+D);
				$(".time").html(h+":"+m);
			}
		</script>
	</body>

</html>