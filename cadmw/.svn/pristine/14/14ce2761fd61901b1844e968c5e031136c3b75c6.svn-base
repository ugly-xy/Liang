<#import "/spring.ftl" as spring /> <#import
"/admin/layouts/common.xhtml" as layout>
<@layout.title>货币管理</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink>
	<input type="hidden" id="nav_id" value="coinType" />
<link rel="stylesheet" type="text/css"
	href="/webuploader/webuploader.css"></@layout.cssLink>
	<@layout.pageHeader> 货币 </@layout.pageHeader> <@layout.mainContent>
<div class="row">
	<div class="col-lg-8">
		<form role="form" id="form">
			<div class="form-group form-inline">
				<label>货币ID</label> <input class="form-control" id="_id" name="_id"
					placeholder="货币ID" value="${(obj._id)!}">
			</div>
			<div class="form-group form-inline">
				<label>货币图标</label>
				<!--用来存放item-->
				<div id="fileList" class="uploader-list">
					<img id="pic"
						src="<#if (obj.pic)?? ><@layout.img path=obj.pic></@layout.img></#if>"
						width="120px" />
				</div>
				<div id="filePicker">选择图片</div>

				<input type="hidden" id="coinPic" name="coinPic" value="${(obj.pic)!}" />
			</div>

			<div class="form-group form-inline">
				<label>货币全称</label> <input class="form-control" id="fullname" name="fullname"
					placeholder="货币全称" value="${(obj.fullname)!}">
			</div>

			
		   <div class="form-group form-inline">
				<label>排序</label> <input class="form-control" id="sort" name="sort"
					placeholder="1" value="${(obj.sort)!}">
			</div>
			<div class="form-group">
				<label>状态</label> 
				<label class="radio-inline">
				<input
					type="radio" name="status" id="status" value="3" checked>上线
				</label> 
				<label
					class="radio-inline"> <input type="radio" name="status"
					id="status" value="1"<#if (obj.status)??&&obj.status==1 >
						checked </#if> >下线 </label> 
			</div>
			<button id="submit" class="btn btn-default">提交</button>
			<button id="reset" class="btn btn-default">重置</button>
		</form>
	</div>

</div>
<!-- /.row (nested) -->

</@layout.mainContent> <@layout.script>
<script type="text/javascript" src="<@layout.static path="/webuploader/webuploader.js" />
">
</script>
<script>
	$(function() {
		$("#submit").click(function(e) {
			e.preventDefault();
			var t = this;
			var jsonData = $("#form").serializeArray();
			$.post("/admin/coinType", jsonData, function(ret) {
				if (0 != ret.code) {
					alert(ret.msg);
				} else {
					alert("Success");
					window.location.href="/admin/coinTypes.xhtml";
				}
			});
		});

		$("#reset").click(function(e) {

		});
	});
	uploader = WebUploader.create({
		auto : true,
		swf : '/webuploader/Uploader.swf',
		server : '<@layout.api path="/file/sysPic" />',
		pick : '#filePicker',
		accept : {
			title : 'Images',
			extensions : 'gif,jpg,jpeg,bmp,png',
			mimeTypes : 'image/*'
		}
	});

	uploader.on('fileQueued', function(file) {

	});

	uploader.on('uploadProgress', function(file, percentage) {
		var $li = $('#' + file.id), $percent = $li.find('.progress span');
		if (!$percent.length) {
			$percent = $('<p class="progress"><span></span></p>').appendTo($li)
					.find('span');
		}
		$percent.css('width', percentage * 100 + '%');
	});

	// 文件上传成功，给item添加成功class, 用样式标记上传成功。
	uploader.on('uploadSuccess', function(file, res) {
		$('#' + file.id).addClass('upload-state-done');
		if (res.code == 0) {
			$("#pic").attr('src', res.data);
			$("#coinPic").val(res.data);
		}
	});

	// 文件上传失败，显示上传出错。
	uploader.on('uploadError', function(file) {
		var $li = $('#' + file.id), $error = $li.find('div.error');
		if (!$error.length) {
			$error = $('<div class="error"></div>').appendTo($li);
		}
		$error.text('上传失败');
	});

	// 完成上传完了，成功或者失败，先删除进度条。
	uploader.on('uploadComplete', function(file) {
		$('#' + file.id).find('.progress').remove();
	});

</script>
</@layout.script>
