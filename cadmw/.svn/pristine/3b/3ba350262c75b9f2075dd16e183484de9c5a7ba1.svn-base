<#import "/spring.ftl" as spring /> <#import
"/admin/layouts/common.xhtml" as layout>
<@layout.title>任务模型管理</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink>
	<input type="hidden" id="nav_id" value="task" />
<link rel="stylesheet" type="text/css"
	href="/webuploader/webuploader.css"></@layout.cssLink>
	<@layout.pageHeader> 任务模型 </@layout.pageHeader> <@layout.mainContent>
<div class="row">
	<div class="col-lg-8">
		<form role="form" id="form">
			<input type="hidden" id="_id" name="_id" value="${(obj._id)!}" />
						<div class="form-group form-inline">
				<label>标题</label> <input class="form-control" id="title"
					name="title" placeholder="例:关注WE官方Twitter" value="${(obj.title)!}">
			</div>

			<div class="form-group form-inline">
				<label>模版</label> 
				<select class="form-control"  id="templateId" name="templateId"> 
                 	<option value="">请选择模版</option> 
				      <#list templateTypes as it>
					    <option  <#if (obj.templateId)?? && (obj.templateId)==it.code >selected</#if>  value="${it.code}" > ${(it.detail)!} </option> 
					  </#list>
				</select>
			</div>

			<div class="form-group form-inline">
				<label>奖励列表</label><a href="javascript:addLine()">添加一行</a>
			    </br>
			    <#if (obj.rewards)??>
			           <#list obj.rewards? keys as key>     
			           <div id="${key_index}">
			            类型:<select class="form-control"   name="coinType"> 
                 	      <option value="" > 请选择类型</option> 
				          <#list coinTypes as it>
					      <option  <#if (key)?? && (key)==it._id >selected</#if>  value="${it._id}" > ${it._id} </option> 
					      </#list>
				        </select>
			            金额:<input class="form-control" name="coinAmount" placeholder="例:50" value="${(obj.rewards[key])!}">
			            <a href="javascript:removedom(${key_index})">删除此行</a>
                        </br>
                        </div>
                      </#list>
				<#else>
				<div id="100">
                 类型:<select class="form-control"   name="coinType"> 
                 	      <option value="" > 请选择类型</option> 
				          <#list coinTypes as it>
					      <option value="${it._id}"> ${it._id} </option> 
					      </#list>
				        </select>
			            金额:<input class="form-control" name="coinAmount" placeholder="例:50" value="">
			            <a href="javascript:removedom(100)">删除此行</a>
				    </div>
				  </#if>
				  <span id="addSpan"></span>
			</div>

            <div class="form-group form-inline">
				<label>结束条件</label> <input class="form-control" id="endCondition"
					name="endCondition" placeholder="例:1" value="${(obj.endCondition)!}">
			</div>

			<div class="form-group form-inline">
            <label>上线时间</label> 
				 <input id="st" name="st" type="text"
					onClick="WdatePicker()" value="${(obj.startTime?number?number_to_datetime)!}" placeholder="上线时间" />
					
			</div>
		 	<div class=" form-group form-inline">
		 	<label>下线时间</label> 
				 <input id="et" name="et" type="text"
					onClick="WdatePicker()" value="${(obj.endTime?number?number_to_datetime)!}" placeholder="下线时间" />
			</div>

		   <div class="form-group form-inline">
				<label>排序</label> <input class="form-control" id="sort" name="sort"
					placeholder="1" value="${(obj.sort)!}">
			</div>
			<div class="form-group">
				<label>状态</label> 
				<label class="radio-inline">
				<input
					type="radio" name="status" id="status" value="3" checked>上线
				</label> 
				<label
					class="radio-inline"> <input type="radio" name="status"
					id="status" value="1"<#if (obj.status)??&&obj.status==1 >
						checked </#if> >下线 </label> 
			</div>

			<div class="form-group form-inline">
				<label>telegram群ID(可选)</label> <input class="form-control" id="telegramId"
					name="telegramId" placeholder="例:-1324281421" value="${(obj.telegramId)!}">
			</div>

			<div class="form-group form-inline">
				<label>telegram加群链接(可选)</label> <input class="form-control" id="telegramId"
					name="telegramUrl" placeholder="例:https://t.me/joinchat/HhZRGVHIY74pYRZbMJB47g" value="${(obj.telegramUrl)!}">
			</div>

			<div class="form-group form-inline">
				<label>twitter账号(可选)</label> <input class="form-control" id="twitterId"
					name="twitterId" placeholder="" value="${(obj.twitterId)!}">
			</div>

			<button id="submit" class="btn btn-default">添加</button>
			<button id="reset" class="btn btn-default">重置</button>
		</form>
	</div>

</div>
<!-- /.row (nested) -->

</@layout.mainContent> <@layout.script>

<script>
	var id=100;
	function addLine() {
		id=id+1;
		$("#addSpan").before("<div id='"+id+"'> 类型:<select class='form-control'   name='coinType'>  <option value='' > 请选择类型</option> <#list coinTypes as it><option value='${it._id}'> ${it._id} </option>  </#list></select> 金额:<input class='form-control' name='coinAmount' placeholder='例:50' value=''>&nbsp;<a href='javascript:removedom("+id+")'>删除此行</a></br></div>");
	}

	function removedom(id) {
	    $("#"+id).remove();
	}

	$(function() {
		$("#submit").click(function(e) {
			e.preventDefault();
			var t = this;
			var jsonData = $("#form").serializeArray();
			$.post("/admin/task", jsonData, function(ret) {
				if (0 != ret.code) {
					alert(ret.msg);
				} else {
					alert("Success");
					window.location.href="/admin/tasks.xhtml";
				}
			});
		});

		$("#reset").click(function(e) {
			window.history.go(-1);
		});

	});
</script>
</@layout.script>
