<#import "/spring.ftl" as spring /> <#import "/admin/layouts/common.xhtml" as layout>
<@layout.title>公告管理</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink> </@layout.cssLink>
<@layout.pageHeader> 公告列表 </@layout.pageHeader> <@layout.mainContent>
	<input type="hidden" id="nav_id" value="notice" />
<div class="well well-sm">
	<div class="row">
		<FORM action="/admin/notices.xhtml">
		<div class="col-sm-1">
		    <label>状态:</label>
		</div>
		<div class="col-sm-2">
		<select class="form-control"  id="status" name="status">
			<option value="0">全部</option>
			<option <#if status?? && status==3>selected</#if> value="3" >上线</option>
			<option <#if status?? && status==1>selected</#if> value="1" >下线</option>
		</select>	
		</div>
		<div class="col-sm-2">
			<button type="submit" class="btn btn-default">查询</button>
			<a class="btn btn-default" href="/admin/notice.xhtml">添加</a>
		</div>
		</FORM>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">

		<div class="dataTable_wrapper">
			<table class="table table-striped table-bordered table-hover"
				id="dataTables-example">
				<thead>
					<tr>
						<th>内容</th>
						<th>发布时间</th>
						<th>修改时间</th>
						<th>状态</th>
						<th>最后操作人</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
					<#list page.list as it>
					<tr class="gradeA">
						<td>${(it.content)!}</td>
						<td><#if it.createTime?? && it.createTime!=0 >${it.createTime?number?number_to_datetime} 
							</#if></td>
						<td><#if it.updateTime?? && it.updateTime!=0 >${it.updateTime?number?number_to_datetime} 
						</#if></td>

						<td class="center"><#if it.status?? && it.status==3 >上线
							<#else>下线</#if></td>
						
						<td>${(it.adminId)!}</td>
						<td class="center"><a href="/admin/notice.xhtml?id=${it._id}" >查看</a></td>
					</tr>
					</#list>
				</tbody>
			</table>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<div class="dataTables_info" id="dataTables-example_info"
					role="status" aria-live="polite">当前 ${page.curPage}/${page.totalPage}页， 共${page.total}条 </div>
			</div>
			<div class="col-sm-8">
			<@vpage cur=page.curPage total=page.totalPage url=page.url > ${vpage}</@vpage>
			</div>
		</div>
	</div>

	<!-- /.col-lg-12 -->
</div>

</@layout.mainContent> 
<@layout.script> </@layout.script>
