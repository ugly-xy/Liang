<#import "/spring.ftl" as spring /> <#import
"/admin/layouts/common.xhtml" as layout>
<@layout.title>商务合作</@layout.title> <@layout.metaKeywordsDescription>

</@layout.metaKeywordsDescription> <@layout.cssLink>
 </@layout.cssLink>
<@layout.pageHeader> 商务合作申请列表 </@layout.pageHeader> <@layout.mainContent>
	<input type="hidden" id="nav_id" value="business" />
<div class="well well-sm">
	<div class="row">
			<FORM action="/admin/businessCooperations.xhtml">
			<div class="col-sm-2">
				<input class="form-control" id="uid" name="uid" value="${(uid)!}" placeholder="用户ID" />
			</div>

			<div class="col-sm-3 form-group form-inline">
			<LABEL>状态:</LABEL>
				<select class="form-control" id="status" name="status">
					<option value="0">全部</option>
					<option value="3" <#if status?? && status==3>selected</#if>
						>已处理</option>
					<option value="1" <#if status?? && status==1>selected</#if>
						>未处理</option>
					<option value="-1" <#if status?? && status==-1>selected</#if>
					    >已拒绝</option>
				</select>
			</div>

			<div class="col-sm-2">
				<button type="submit" class="btn btn-default">查询</button>
			</div>
		</FORM>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="dataTable_wrapper">
			<table class="table table-striped table-bordered table-hover"
				id="dataTables-example">
				<thead>
					<tr>
						<th>名字(用户ID)</th>
						<th>微信|email|手机</th>
						<th>合作意向</th>
						<th>提交时间|处理时间</th>
						<th>状态</th>
						<th>最后处理人</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
				<div id="outerdiv" style="position:fixed;top:0;left:0;background:rgba(0,0,0,0.7);z-index:2;width:100%;height:100%;display:none;">
                           <div id="innerdiv" style="position:absolute;">
                           <img id="bigimg" style="border:5px solid #fff;" src="" />
                           </div>
                        </div>
					<#list page.list as it>
					<tr class="gradeA">
						<td><a href="/admin/users.xhtml?userId=${(it.uid)!}" target="_black">${(it.name)!}(${(it.uid)!})</a>
						</td>
						<td> email:${(it.email)!}
					    </br> phone:${(it.phone)!}
						</td>
						<td class="center">
							${(it.cooperationIntention)!}
						</td>
						<td>
							<#if it.createTime??> ${it.createTime?number?number_to_datetime}</#if></br>
							<#if it.updateTime??>${it.updateTime?number?number_to_datetime}</#if>
						</td>

						<td class="center">
							<#if it.status?? && it.status==3 >已处理
							<#elseif it.status?? && it.status==1 >未处理
							<#else>已拒绝
							</#if>
						</td>

						<td class="center">
							${(it.adminId)!}
						</td>

						<td class="center">
							<#if it.status?? && it.status==3 >
							<#elseif it.status?? && it.status==-1>
							<a href="javascript:validto3('${it._id}')">通过</a>			
							<#else>
							<a href="javascript:validto3('${it._id}')">通过</a>
							<br/>
							<a href="javascript:validto1('${it._id}')">拒绝</a>
							</#if>
						</td>
					</tr>
					</#list>
				</tbody>
			</table>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<div class="dataTables_info" id="dataTables-example_info"
					role="status" aria-live="polite">当前
					${page.curPage}/${page.totalPage}页， 共${page.total}条</div>
			</div>
			<div class="col-sm-8"><@vpage cur=page.curPage
				total=page.totalPage url=page.url > ${vpage}</@vpage></div>
		</div>
	</div>

	<!-- /.col-lg-12 -->
</div>

</@layout.mainContent> 
<@layout.script>
<script type="text/javascript">

function validto1(id) {
	var jsonData = {
		"_id" : id,
		"status":-1
	};
	$.post("/admin/businessCooperation/status", jsonData, function(ret) {
		if (0 != ret.code) {
			alert(ret.msg);
		} else {
			location.reload();
			alert("Success");
		}
	});
}

function validto3(id) {
	var jsonData = {
		"_id" : id,
		"status":3
	};
	$.post("/admin/businessCooperation/status", jsonData, function(ret) {
		if (0 != ret.code) {
			alert(ret.msg);
		} else {
			location.reload();
			alert("Success");
		}
	});
}

</script>
</@layout.script>