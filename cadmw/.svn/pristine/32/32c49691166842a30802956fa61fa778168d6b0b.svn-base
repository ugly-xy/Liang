### set log levels - for more verbose logging change 'info' to 'debug' ###

log4j.logger.rawdata=info, rawdata

### direct messages to file rawdata.log ###
log4j.appender.rawdata=org.apache.log4j.DailyRollingFileAppender
log4j.appender.rawdata.Encoding=UTF-8
log4j.appender.rawdata.File=c:\\opt\\rawdata\\rawdata.log
log4j.appender.rawdata.DatePattern='.'yyyy-MM-dd-HH
log4j.appender.rawdata.layout=org.apache.log4j.PatternLayout
log4j.appender.rawdata.layout.ConversionPattern=%m%n
