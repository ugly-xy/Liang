<#import "/spring.ftl" as spring />
<#import "/admin/layouts/common.xhtml" as layout>
<@layout.title> 货币管理</@layout.title> <@layout.metaKeywordsDescription>
</@layout.metaKeywordsDescription> <@layout.cssLink> </@layout.cssLink>
<@layout.pageHeader> 货币列表 </@layout.pageHeader> <@layout.mainContent>
<input type="hidden" id="nav_id" value="coinType" />
<div class="well well-sm">
	<div class="row">
		<FORM action="/admin/coinTypes.xhtml">
			<div class="col-sm-2">
				<input class="form-control" id="_id" name="_id" value="${(_id)!}" placeholder="货币ID" />
			</div>

			<div class="col-sm-3 form-group form-inline">
			<LABEL>状态:</LABEL>
				<select class="form-control" id="status" name="status">
					<option value="0">全部</option>
					<option value="3" <#if status?? && status==3>selected</#if>
						>上线</option>
					<option value="1" <#if status?? && status==1>selected</#if>
						>下线</option>
				</select>
			</div>
			<div class="col-sm-3">
				<button type="submit" class="btn btn-default">查询</button>
				<a class="btn  btn-default" href="/admin/coinType.xhtml">添加货币</a>
			</div>
		</FORM>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="dataTable_wrapper">
			<table class="table table-striped table-bordered table-hover"
				id="dataTables-example">
				<thead>
					<tr>
						<th>ID|全称</th>
						<th>图标</th>
						<th>官网|简介</th>
						<th>送出数量|总数量</th>
						<th>价格(美元|人民币)</th>
						<th>排序</th>
						<th>时间</th>
						<th>操作人</th>
						<th>状态</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
					<#list page.list as it>
					<tr class="gradeA">
						<td>${(it._id)!}<br/>
							${(it.fullname)!}
						</td>
						<td><img
							src="<#if it.pic??><@layout.img path=it.pic></@layout.img></#if>"
							width="120px" /> 
						</td>
						<td><a href="${(it.url)!}" target="_black">${(it.url)!}</a><br/>
							${(it.detail)!}
						</td>
						<td>${(it.sendCnt)!}&nbsp;&nbsp;|&nbsp;&nbsp;${(it.totalCnt)!}</td>
						<td>$${(it.price_dollar)!}&nbsp;&nbsp;|&nbsp;&nbsp;¥${(it.price_rmb)!}</td>
						<td>${(it.sort)!}</td>
						<td>${it.updateTime?number?number_to_datetime}</td>
						<td>${(it.adminId)!}</td>
						<td class="center">
							<#if it.status?? && it.status==3 >上线
							<#elseif it.status?? && it.status==1 >下线
							<#else>
							</#if>
						</td>

						 <td class="center">
						 	<a href="/admin/coinType.xhtml?_id=${it._id}">查看</a>
						 </td>
					</tr>
					</#list>
				</tbody>
			</table>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<div class="dataTables_info" id="dataTables-example_info"
					role="status" aria-live="polite">当前
					${page.curPage}/${page.totalPage}页， 共${page.total}条</div>
			</div>
			<div class="col-sm-8"><@vpage cur=page.curPage
				total=page.totalPage url=page.url > ${vpage}</@vpage></div>
		</div>
	</div>

	<!-- /.col-lg-12 -->
</div>

</@layout.mainContent> <@layout.script> </@layout.script>